---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../config";
---

<header>
	<h2>
		<img
			style="border-radius: 50%; height: 4em; width: 4em; float: right;"
			src="https://avatars.githubusercontent.com/jordemort"
		/>
		{SITE_TITLE}
	</h2>
	<nav>
		<HeaderLink href="/">Home</HeaderLink>
		<HeaderLink href="/portfolio/">Portfolio</HeaderLink>
		<HeaderLink href="/blog/">Blog</HeaderLink>
		<HeaderLink
			href="https://www.linkedin.com/in/jordanwebbfromchicago/"
			target="_blank">LinkedIn</HeaderLink
		>
		<HeaderLink href="https://github.com/jordemort" target="_blank"
			>GitHub</HeaderLink
		>
	</nav>
</header>
<style>
	header {
		margin: 0em 0 2em;
	}
	h2 {
		margin: 0.5em 0;
	}
	main {
		clear: both;
	}
</style>
