---
export interface Props {
  tag: string
}

const { tag } = Astro.props;
---
<style>
  .p-tag {
    font-size: smaller;
    padding-left: 0.5em;
    padding-right: 0.5em;
    color: #fff;
    background-color: rgb(30, 30, 30);
    border-radius: 5px;
  }

  @media (prefers-color-scheme: dark) {
    .p-tag {
      color: #000;
      background-color: #9e98f2;
    }
  }
</style>
<a class="p-tag" href={`/tags/${tag}/`}><span itemprop="keywords">{tag}</span></a>
